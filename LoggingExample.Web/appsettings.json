{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=LoggingExampleDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Redis": {
    "ConnectionString": "localhost:6379,password=RedisStr0ng!Pass",
    "InstanceName": "LoggingExample:",
    "AbsoluteExpirationMinutes": 60,
    "SlidingExpirationMinutes": 20
  },
  "SeriLogConfig": {
    "ProjectName": "logging-example",
    "ElasticUri": "http://elasticsearch:9200",
    "Environment": "development",
    "ElasticUser": "elastic",
    "ElasticPassword": "changeme"
  },
  "Seq": {
    "ServerUrl": "http://seq:5341"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Elasticsearch",
      "Serilog.Sinks.Seq",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.CorrelationId",
      "Serilog.Exceptions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Elastic.Clients.Elasticsearch": "Warning",
        "Elastic.Transport": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithExceptionDetails",
      "WithCorrelationId"
    ],
    "Properties": {
      "Environment": "development",
      "Application": "LoggingExample"
    }
  },
  "ElasticApm": {
    "ServerUrls": "http://apm-server:8200",
    "ServiceName": "Logging-Example",
    "Environment": "development",
    "TransactionSampleRate": 1.0,
    "CaptureBody": "all",
    "CaptureHeaders": true
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topic": "kafka-topic",
    "GroupId": "kafka-group"
  }
}