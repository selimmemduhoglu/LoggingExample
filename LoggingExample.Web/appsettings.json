{
    "AllowedHosts": "*", // Uygulama tarafından kabul edilen host adları, "*" tüm host adlarını kabul eder

    "SeriLogConfig": { // Özel Serilog konfigürasyonu (kodda kullanılabilir)
        "ProjectName": "logging-example", // Proje adı
        "ElasticUri": "http://elasticsearch:9200", // Elasticsearch adresi
        "Environment": "development", // Ortam
        "ElasticUser": "elastic", // Elasticsearch kullanıcı adı
        "ElasticPassword": "changeme" // Elasticsearch şifresi
    },

    "Serilog": { // Serilog loglama konfigürasyonu
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch", "Serilog.Enrichers.Environment" ], // Kullanılacak Serilog paketleri

        "MinimumLevel": { // Minimum log seviyesi ayarları
            "Default": "Information", // Varsayılan minimum seviye - Information ve üstü loglanır
            "Override": { // Belirli namespace'ler için override
                "Microsoft": "Warning", // Microsoft namespace'i için Warning ve üstü loglanır
                "System": "Warning" // System namespace'i için Warning ve üstü loglanır
            }
        },

        "WriteTo": [ // Logların yazılacağı hedefler
            {
                "Name": "Console" // Konsola log yazma
            },
            {
                "Name": "Elasticsearch", // Elasticsearch'e log yazma
                "Args": { // Elasticsearch sink için argümanlar
                    "nodeUris": "http://elasticsearch:9200", // Elasticsearch sunucu adresi
                    "indexFormat": "logging-example-development-logs-{0:yyyy.MM.dd}", // Log indexi formatı (tarih bazlı)
                    "autoRegisterTemplate": true, // Index template'ini otomatik kaydetme
                    "autoRegisterTemplateVersion": "ESv7", // Elasticsearch v7 için template
                    "DetectElasticsearchVersion": true, // Elasticsearch versiyonunu otomatik algılama
                    "OverwriteTemplate": true, // Mevcut template'i üzerine yazma
                    "emitEventFailure": "WriteToSelfLog", // Log gönderme hatası durumunda SelfLog'a yazma
                    "registerTemplateFailure": "IndexAnyway", // Template kayıt hatası durumunda yine de indexleme
                    "connectionGlobalHeaders": { // Bağlantı başlıkları
                        "Authorization": "Basic ZWxhc3RpYzpjaGFuZ2VtZQ==" // Basic auth için encoded credentials
                    }
                }
            }
        ],

        "Enrich": [ "FromLogContext", "WithMachineName" ], // Log zenginleştirme ayarları
        // FromLogContext: LogContext'ten alınan property'leri ekler
        // WithMachineName: Makine adını ekler

        "Properties": { // Tüm loglara eklenecek sabit propertyler
            "Environment": "development" // Ortam bilgisi
        }
    },


    "ElasticApm": { // Elastic APM konfigürasyonu
        "SecretToken": "changeme", // APM Server token
        "ServerUrls": "http://apm-server:8200", // APM Server adresi
        "ServiceName": "Logging-Example", // Servis adı
        "Environment": "development" // Ortam
    }
}